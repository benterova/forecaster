<%= turbo_frame_tag :forecast_results do %>
 <% forecast_presenter ||= nil %>
    <% if forecast_presenter.blank? %>
        <div class="col-span-7 text-center" id="no_results"><%= t('forecast.no_results') %></div>
    <% else %>
        <% if forecast_presenter.from_cache? %>
            <div class="col-span-7 text-center rounded bg-gray-200 p-2 my-4"><%= t('forecast.from_cache') %></div>
        <% end %>
        <div class="text-center my-3">
            <h1 class="text-2xl" id="current_temperature"><%= t("forecast.current_temperature", temperature: forecast_presenter.current_temperature) %></h1>
        </div>
        <div class="grid grid-cols-7 gap-4">
            <% forecast_presenter.days.each do |day| %>
                <div class="p-4 border rounded shadow forecast">
                    <div class="text-center mb-2">
                        <i class="fa-solid fa-<%= day[:icon] %> text-2xl"></i>
                    </div>
                    <div class="text-center font-bold mb-2"><%= day[:date] %></div>
                    <div class="flex justify-between">
                        <span><%= t("forecast.low", temperature: day[:low]) %></span>
                        <span><%= t("forecast.high", temperature: day[:high]) %></span>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
<% end %>